<h1>Listing parts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Machine</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @parts.each do |part| %>
      <tr>
        <td><%= part.name %></td>
        <td><%= part.machine_id%></td>
        <td><%= link_to 'Show', part %></td>
        <%# if part.machine == current_user %>
          <td><%= link_to 'Edit', edit_part_path(part) %></td>
          <td><%= link_to 'Destroy', part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%# end %>  
       </tr>
    <% end %>
  </tbody>
</table>

<br>
<%# if user_signed_in? %>
  <%= link_to 'New Part', new_part_path %>
<%# end %>